<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/math"
    tools:context=".Start">

    <TextView
        android:id="@+id/oneTope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Первая тема"
        android:layout_marginTop="20sp"
        android:textAlignment="center"
        android:textColor="#C4000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/oneTope"
        android:layout_marginTop="10sp"
        android:background="@color/white"
        android:text="@string/fg1"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:visibility="invisible"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/A1"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="520sp"
        android:background="#FFFFFF"
        android:text="Button"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/A2"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190sp"
        android:layout_marginTop="520sp"
        android:background="#FFFFFF"
        android:text="Button"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/A3"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="580sp"
        android:background="#FFFFFF"
        android:text="Button"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/A4"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190sp"
        android:layout_marginTop="580sp"
        android:background="#FFFFFF"
        android:text="Button"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/try_again"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="580sp"
        android:background="@drawable/button"
        android:text="Продолжить"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="540sp"
        android:background="@drawable/button"
        android:text="Нет, хочу выйти в меню"
        android:visibility="invisible" />

    <fragment
        android:name="com.example.uravnenie2.FragmentStart"
        android:id="@+id/fg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/A1"
        android:layout_marginTop="65sp"></fragment>




</RelativeLayout>