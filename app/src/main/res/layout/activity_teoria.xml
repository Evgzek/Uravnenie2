<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/math"
    tools:context=".Teoria">

    <TextView
        android:id="@+id/TitleTeoria"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@drawable/button"
        android:layout_marginTop="10sp"
        android:text="@string/Teoria"
        android:textAlignment="center"
        android:layout_marginHorizontal="100sp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Tema1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleTeoria"
        android:background="@drawable/button"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="10sp"
        android:text="Тема 1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Tema2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tema1"
        android:layout_marginHorizontal="50sp"
        android:background="@drawable/button"
        android:layout_marginTop="10sp"
        android:text="Тема 2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Tema3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tema2"
        android:layout_marginHorizontal="50sp"
        android:background="@drawable/button"
        android:layout_marginTop="10sp"
        android:text="Тема 3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Tema4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tema3"
        android:layout_marginHorizontal="50sp"
        android:background="@drawable/button"
        android:layout_marginTop="10sp"
        android:text="Тема 4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Tema5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Tema4"
        android:layout_marginHorizontal="50sp"
        android:background="@drawable/button"
        android:layout_marginTop="10sp"
        android:text="Тема 5" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/umnii"
        android:layout_marginTop="50sp"
        android:layout_marginHorizontal="20sp"
        android:layout_below="@id/Tema5"/>
</RelativeLayout>